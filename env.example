# PingOne User Management Application - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# PingOne Configuration (REQUIRED)
PINGONE_ENV_ID=your_environment_id_here
PINGONE_CLIENT_ID=your_client_id_here
PINGONE_CLIENT_SECRET=your_client_secret_here

# Optional PingOne Configuration
PINGONE_AUTH_URI=https://auth.pingone.com
PINGONE_API_URI=https://api.pingone.com
PINGONE_SCOPES=p1:admin:user:read p1:admin:user:write

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_DESTINATION=uploads/
UPLOAD_TEMP_DIR=uploads/

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_SECRET=your-secret-key-change-in-production
SESSION_MAX_AGE=86400000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=import-status.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Validation Configuration
MAX_USERS_PER_IMPORT=1000 